<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Chat & Tracking</title>

    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.css" />

    <style>
        * { box-sizing: border-box; }

        body {
            margin: 0;
            background: #f2f4f7;
            font-family: "Poppins", sans-serif;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        #chat-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: white;
            border-radius: 0 0 25px 25px;
            box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        #messages {
            flex: 1;
            padding: 12px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .msg {
            padding: 10px 14px;
            border-radius: 20px;
            font-size: 15px;
            max-width: 75%;
            word-wrap: break-word;
            animation: fadeIn .3s ease-in-out;
        }

        .right { align-self: flex-end; background: #007aff; color: white; }
        .left { background: #e8e8e8; }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(5px); }
            to { opacity: 1; transform: translateY(0); }
        }

        #input-box {
            display: flex;
            padding: 10px;
            background: #fafafa;
            border-top: 1px solid #ddd;
            align-items: center;
        }

        input {
            flex: 1;
            padding: 12px 14px;
            font-size: 16px;
            border-radius: 25px;
            border: 1px solid #ccc;
            background: #fff;
            outline: none;
        }

        button {
            margin-left: 8px;
            padding: 10px 18px;
            background: #007aff;
            border: none;
            border-radius: 25px;
            font-size: 15px;
            color: white;
            cursor: pointer;
            transition: 0.2s;
        }

        button:hover { background: #005fcc; }

        #map {
            height: 40vh;
            width: 100%;
        }
    </style>
</head>
<body>

<div id="chat-container">
    <div id="messages"></div>

    <div id="input-box">
        <input id="msgInput" type="text" placeholder="Type message...">
        <button onclick="sendMessage()">Send</button>
    </div>
</div>

<div id="map"></div>

<!-- JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet-routing-machine/dist/leaflet-routing-machine.js"></script>
<script src="/socket.io/socket.io.js"></script>

<script>
let socket;
let matchId;

document.addEventListener("DOMContentLoaded", () => {

    var user1Lat = <%= user1.location.coordinates[1] %>;
    var user1Lng = <%= user1.location.coordinates[0] %>;
    var user2Lat = <%= user2.location.coordinates[1] %>;
    var user2Lng = <%= user2.location.coordinates[0] %>;

    let map = L.map("map").setView([user1Lat, user1Lng], 14);
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png").addTo(map);

    let userMarker = L.marker([user1Lat, user1Lng]).addTo(map).bindPopup("üìç You");
    let matchedMarker = L.marker([user2Lat, user2Lng]).addTo(map).bindPopup("ü§ù Matched User");

    let routeControl = L.Routing.control({
        waypoints: [ L.latLng(user1Lat, user1Lng), L.latLng(user2Lat, user2Lng) ],
        lineOptions: { addWaypoints: false, styles: [{ color: "#007aff", weight: 4 }] },
        createMarker: () => null
    }).addTo(map);

    function updateDistance() {
        let distance = map.distance(userMarker.getLatLng(), matchedMarker.getLatLng());
        userMarker.bindPopup(`üìç You<br>Distance: ${(distance / 1000).toFixed(2)} km`).openPopup();
        matchedMarker.bindPopup(`ü§ù Matched User<br>Distance: ${(distance / 1000).toFixed(2)} km`);
    }

    updateDistance();
socket = io();

const urlParams = new URLSearchParams(window.location.search);
matchId = urlParams.get("matchId");

// ‚úÖ join the room
socket.emit("joinRoom", matchId);

// ‚úÖ Receive messages (THIS WAS MISSING INSIDE DOMContentLoaded!)
socket.on("receiveMessage", (data) => {
    appendMessage(data.message, false);  // show on other screen
});


    socket.on("userMoved", ({ lat, lng }) => {
        matchedMarker.setLatLng([lat, lng]);
        routeControl.setWaypoints([ userMarker.getLatLng(), matchedMarker.getLatLng() ]);
        updateDistance();
    });

    navigator.geolocation.watchPosition(
        (pos) => {
            const lat = pos.coords.latitude;
            const lng = pos.coords.longitude;

            userMarker.setLatLng([lat, lng]);
            routeControl.setWaypoints([ userMarker.getLatLng(), matchedMarker.getLatLng() ]);
            updateDistance();

            socket.emit("locationUpdate", { matchId, lat, lng });
        }
    );
});

// ‚úÖ FINAL ‚Äî ONLY ONE MESSAGE SCRIPT
function sendMessage() {
    const msg = document.getElementById("msgInput").value;
    if (!msg) return;

    socket.emit("sendMessage", {
    matchId: String(matchId), // ensure string
    message: msg,
    sender: socket.id         // attach sender
});

    appendMessage(msg, true);
    document.getElementById("msgInput").value = "";
}

socket?.on("receiveMessage", (data) => {
    appendMessage(data.message, false);
});

function appendMessage(msg, isMine) {
    const container = document.getElementById("messages");
    const div = document.createElement("div");
    div.classList.add("msg", isMine ? "right" : "left");
    div.innerText = msg;
    container.appendChild(div);
    container.scrollTop = container.scrollHeight;
}
</script>

</body>
</html>
