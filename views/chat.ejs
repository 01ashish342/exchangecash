<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            background: #eef2f3;
            margin: 0;
        }

        #chat-container {
            max-width: 480px;
            margin: auto;
            height: 100vh;
            display: flex;
            flex-direction: column;
            background: white;
        }

        #messages {
            flex: 1;
            padding: 15px;
            overflow-y: auto;
        }

        .msg {
            background: #007aff;
            color: white;
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 8px;
            width: fit-content;
            max-width: 80%;
        }

        .right {
            background: #e0e0e0;
            color: black;
            align-self: flex-end;
        }

        #input-box {
            display: flex;
            padding: 10px;
            border-top: 1px solid #ccc;
        }

        input {
            flex: 1;
            padding: 12px;
            border-radius: 6px;
            border: 1px solid gray;
            font-size: 16px;
        }

        button {
            padding: 12px;
            margin-left: 10px;
            background: #007aff;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        button:hover {
            background: #0057c2;
        }
    </style>
</head>
<body>

<div id="chat-container">
    
    <div id="messages"></div>

    <div id="input-box">
        <input id="msgInput" type="text" placeholder="Type your message...">
        <button onclick="sendMessage()">Send</button>
    </div>

</div>
<div id="map" style="height: 400px;"></div>


<script>
document.addEventListener("DOMContentLoaded", () => {

    var user1Lat = <%= user1.location.coordinates[1] %>;
    var user1Lng = <%= user1.location.coordinates[0] %>;
    var user2Lat = <%= user2.location.coordinates[1] %>;
    var user2Lng = <%= user2.location.coordinates[0] %>;

    var map = L.map("map").setView([user1Lat, user1Lng], 15);

    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png").addTo(map);

    // ‚úÖ Precise Marker
    var userMarker = L.marker([user1Lat, user1Lng]).addTo(map).bindPopup("üìç You");
    var matchedMarker = L.marker([user2Lat, user2Lng]).addTo(map).bindPopup("ü§ù Matched User");

    // ‚úÖ Blue circle showing location accuracy (10 meters)
    L.circle([user1Lat, user1Lng], {
        radius: 10,
        color: "blue",
        fillColor: "#90c3ff",
        fillOpacity: 0.3
    }).addTo(map);

    // ‚úÖ Draw line between both users
    var line = L.polyline(
        [
            [user1Lat, user1Lng],
            [user2Lat, user2Lng]
        ],
        { color: "red", weight: 4 }
    ).addTo(map);

    // ‚úÖ Auto zoom to fit both markers
    map.fitBounds(line.getBounds(), { padding: [50, 50] });

    // ‚úÖ Calculate distance (in meters)
    var distance = map.distance([user1Lat, user1Lng], [user2Lat, user2Lng]);

    // ‚úÖ Show distance in popup
    userMarker.bindPopup(`üìç You<br>Distance to user: ${(distance / 1000).toFixed(2)} km`).openPopup();
    matchedMarker.bindPopup(`ü§ù Matched User<br>Distance: ${(distance / 1000).toFixed(2)} km`);

});
</script>


<script src="/socket.io/socket.io.js"></script>


<script>
    const socket = io();

    const urlParams = new URLSearchParams(window.location.search);
    const matchId = urlParams.get("matchId");

    socket.emit("joinRoom", matchId);

    function sendMessage() {
        const msg = document.getElementById("msgInput").value;
        if (!msg) return;

        socket.emit("sendMessage", { matchId, message: msg });

        appendMessage(msg, true);
        document.getElementById("msgInput").value = "";
    }

    socket.on("receiveMessage", (data) => {
        appendMessage(data.message, false);
    });

    function appendMessage(msg, isMine) {
        const messageBox = document.getElementById("messages");
        const div = document.createElement("div");

        div.classList.add("msg");
        if (isMine) div.classList.add("right");

        div.innerText = msg;
        messageBox.appendChild(div);
        messageBox.scrollTop = messageBox.scrollHeight;
    }
</script>

</body>
</html>
