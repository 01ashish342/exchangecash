<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CASH APP</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

    <!-- ✅ Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Poppins", sans-serif;
            margin: 0;
            padding: 0;
            color: #fff;
            background: linear-gradient(135deg, #0078ff, #00d4ff);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            animation: fadeIn 0.6s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        h2 {
            font-size: 34px;
            font-weight: 700;
            color: white;
            margin-top: 28px;
            text-shadow: 0px 4px 10px rgba(0,0,0,0.25);
        }

        p {
            text-align: center;
            font-size: 15px;
            opacity: 0.9;
            margin: 5px 20px 10px;
            line-height: 1.5;
        }

        .container {
            width: 90%;
            max-width: 430px;
            background: #ffffff;
            border-radius: 15px;
            margin-top: 25px;
            padding: 28px;
            color: #333;
            box-shadow: 0px 8px 25px rgba(0,0,0,0.20);
        }

        label {
            font-weight: 600;
            font-size: 15px;
            display: block;
            margin-top: 12px;
        }

        select,
        input {
            width: 100%;
            padding: 14px;
            margin-top: 6px;
            border-radius: 10px;
            border: 1px solid #ccc;
            font-size: 16px;
            outline: none;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            padding: 14px;
            margin-top: 22px;
            font-size: 18px;
            border: none;
            border-radius: 10px;
            background: linear-gradient(135deg, #006eff, #00bbff);
            color: white;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        button:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #0057dd, #009bde);
            box-shadow: 0px 5px 15px rgba(0,0,0,0.2);
        }

        /* ✅ Mobile Optimization */
        @media (max-width: 480px) {
            h2 {
                font-size: 28px;
                margin-top: 18px;
            }

            .container {
                padding: 22px;
                margin-top: 18px;
                border-radius: 12px;
            }

            select,
            input,
            button {
                font-size: 15px;
                padding: 12px;
            }
        }
    </style>
</head>

<body>

    <h2>CASH APP</h2>
    <p>Exchange Cash ↔ Online with the nearest trusted user.</p>

    <div class="container">
        <form id="exchangeForm">
            <label>Select Mode</label>
            <select name="mode" id="mode">
                <option value="cashtoonline">Cash ➝ Online</option>
                <option value="onlinetocash">Online ➝ Cash</option>
            </select>

            <label>Amount (₹)</label>
            <input type="number" name="amount" id="amount" placeholder="Enter amount" required>

            <label>Phone Number</label>
            <input type="tel" name="phone" id="phone" placeholder="Enter your phone number" required>

            <button type="submit">Find Match</button>

            <input type="hidden" id="lat" name="lat">
            <input type="hidden" id="lng" name="lng">
        </form>
    </div>


<script>
    let userLat = null;
    let userLng = null;

    navigator.geolocation.getCurrentPosition(
        (pos) => {
            userLat = pos.coords.latitude;
            userLng = pos.coords.longitude;
        },
        () => {
            alert("⚠️ Please allow location access.");
        }
    );

    document.getElementById("exchangeForm").addEventListener("submit", async function(e) {
        e.preventDefault();

        const mode = document.getElementById("mode").value;
        const amount = document.getElementById("amount").value;
        const phone = document.getElementById("phone").value;

        if (!userLat || !userLng) {
            alert("⚠️ Location not detected yet. Try again.");
            return;
        }

        const response = await fetch("/submit", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                mode, amount, phone,
                lat: userLat, lng: userLng
            })
        });

        const result = await response.json();

        if (result.status === "searching") {
            alert("⏳ Searching for nearby users...");
        }
        else if (result.status === "matched") {
            window.location.href = `/verify?matchId=${result.matchId}`;
        }
        else {
            alert("❌ Server Error, try again.");
        }
    });
</script>

<script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>

<script>
    const socket = io();

    socket.on("matchFound", (data) => {
        alert("✅ Match Found! Redirecting...");
        window.location.href = `/verify?matchId=${data.matchId}`;
    });
</script>

</body>
</html>
