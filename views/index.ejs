<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CASH APP</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(120deg, #0078ff, #00c6ff);
            margin: 0;
            padding: 0;
            color: white;
            text-align: center;
        }

        h2 {
            margin-top: 30px;
            font-size: 32px;
            font-weight: bold;
        }

        p {
            width: 80%;
            margin: auto;
            font-size: 18px;
            opacity: 0.9;
        }

        form {
            background: white;
            width: 380px;
            margin: 30px auto;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0px 0px 20px rgba(0,0,0,0.2);
            color: #333;
            text-align: left;
        }

        form span {
            font-size: 14px;
            display: block;
            margin-top: 10px;
            font-weight: bold;
        }

        select,
        input {
            width: 100%;
            padding: 10px;
            margin-top: 6px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 14px;
        }

        button {
            width: 100%;
            background: #007bff;
            color: white;
            border: none;
            padding: 12px;
            font-size: 16px;
            border-radius: 6px;
            margin-top: 18px;
            cursor: pointer;
            transition: 0.3s;
        }

        button:hover {
            background: #0056b3;
        }

        #map {
            height: 350px;
            width: 80%;
            border-radius: 10px;
            margin: 40px auto;
            border: 3px solid rgba(255, 255, 255, 0.5);
        }
    </style>
</head>

<body>

    <h2>Welcome to our Cash App!</h2>
    <p>
        HERE, you can exchange cash if you need online and online if you need cash.  
        Just select your mode → enter amount → allow location → we match you with nearby user.  
        <br><br><b>Thank you for using our service!</b>
    </p>

    <form id="exchangeForm">

        <span>Select your mode</span>
        <select name="mode" id="mode">
            <option value="cashtoonline">Cash ➝ Online</option>
            <option value="onlinetocash">Online ➝ Cash</option>
        </select>

        <span>Rupees</span>
        <input type="number" name="amount" id="amount" placeholder="Enter your amount" required>

        <span>Phone number</span>
        <input type="tel" name="phone" id="phone" placeholder="Your phone number" required>

        <button type="submit">Submit</button>

        <input type="hidden" id="lat" name="lat">
        <input type="hidden" id="lng" name="lng">
    </form>

    <!-- <div id="map"></div>

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script> -->
<script>



    // let map = L.map("map").setView([20.5937, 78.9629], 5);

    // L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    //     maxZoom: 19,
    // }).addTo(map);

    let userLat = null;
    let userLng = null;

    
    //  Get user location
    navigator.geolocation.getCurrentPosition(
        (pos) => {
            userLat = pos.coords.latitude;
            userLng = pos.coords.longitude;

            // L.marker([userLat, userLng]).addTo(map).bindPopup("You are here.").openPopup();
            // map.setView([userLat, userLng], 15);

           
        },
        (err) => {
            alert("⚠️ Please allow location access.");
        }

         
    );

     

    //  Handle form submit (AJAX)
    document.getElementById("exchangeForm").addEventListener("submit", async function(e) {
        e.preventDefault();

        const mode = document.getElementById("mode").value.trim().toLowerCase();

        const amount = document.getElementById("amount").value;
        const phone = document.getElementById("phone").value;

        if (!userLat || !userLng) {
            alert("⚠️ Location not detected yet. Try again.");
            return;
        }

        const response = await fetch("/submit", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
                mode, amount, phone,
                lat: userLat,
                lng: userLng
            })
        });

        const result = await response.json();

        if (result.status === "searching") {
            alert("Searching for nearby users...");
        } 
        else if (result.status === "matched") {
            window.location.href = `/verify?matchId=${result.matchId}`;
        } 
        else {
            alert("Server Error, try again.");
        }
    });
</script>

<script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>

<script>
    const socket = io();

    socket.on("matchFound", (data) => {
        alert(" Match Found! Redirecting to OTP page...");
        window.location.href = `/verify?matchId=${data.matchId}`;
    });
</script>

</body>
</html>
