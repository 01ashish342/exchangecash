<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #eef2f3;
            margin: 0;
        }

        .box {
            width: 350px;
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        input {
            width: 90%;
            padding: 12px;
            margin-top: 10px;
            border-radius: 6px;
            border: 1px solid gray;
            font-size: 16px;
        }

        button {
            width: 95%;
            padding: 12px;
            margin-top: 20px;
            background: #007aff;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
        }

        button:hover {
            background: #0057c2;
        }

        #message {
            margin-top: 15px;
            font-size: 16px;
        }

        .success {
            color: green;
        }
        .error {
            color: red;
        }
    </style>

</head>
<body>

<div class="box">
    <h2>OTP Verification</h2>
    <p>Enter OTP sent to your phone</p>

    <input type="text" id="otp" placeholder="Enter OTP" maxlength="6" />

    <button onclick="verifyOTP()">Verify</button>

    <div id="message"></div>
</div>

<script>
async function verifyOTP() {
    const otp = document.getElementById("otp").value;

    const res = await fetch("/verify-otp", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ otp })
    });

    const result = await res.json();

    const msgBox = document.getElementById("message");
    if (result.success) {
        msgBox.innerHTML = "✅ OTP Verified! Connecting to chat...";
        msgBox.className = "success";

        setTimeout(() => {
            window.location.href = "/chat?matchId=" + result.matchId;
        }, 1500);

    } else {
        msgBox.innerHTML = "❌ Invalid OTP. Try again.";
        msgBox.className = "error";
    }
}
</script>

</body>
</html>
