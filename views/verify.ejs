<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verify OTP</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />

    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>



    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #eef2f3;
            margin: 0;
        }

        .box {
            width: 350px;
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        input {
            width: 90%;
            padding: 12px;
            margin-top: 10px;
            border-radius: 6px;
            border: 1px solid gray;
            font-size: 16px;
        }

        button {
            width: 95%;
            padding: 12px;
            margin-top: 20px;
            background: #007aff;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
        }

        button:hover {
            background: #0057c2;
        }

        #message {
            margin-top: 15px;
            font-size: 16px;
        }

        .success {
            color: green;
        }
        .error {
            color: red;
        }

        #map {
    width: 100%;
    height: 400px;
    border-radius: 10px;
}

    </style>

</head>
<body>

<div class="box">
    <h2>OTP Verification</h2>
    <p>Enter OTP sent to your phone</p>

    <input type="text" id="otp" placeholder="Enter OTP" maxlength="6" />
    <input type="hidden" id="matchId" value="<%= matchId %>">


    <button onclick="verifyOTP()">Verify</button>

    <div id="message"></div>
</div>

<div id="map" style="height: 400px;"></div>



<script>
document.addEventListener("DOMContentLoaded", () => {

    var user1Lat = <%= user1.location.coordinates[1] %>;
    var user1Lng = <%= user1.location.coordinates[0] %>;
    var user2Lat = <%= user2.location.coordinates[1] %>;
    var user2Lng = <%= user2.location.coordinates[0] %>;

    var map = L.map("map").setView([user1Lat, user1Lng], 15);

    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png").addTo(map);

    // ‚úÖ Precise Marker
    var userMarker = L.marker([user1Lat, user1Lng]).addTo(map).bindPopup("üìç You");
    var matchedMarker = L.marker([user2Lat, user2Lng]).addTo(map).bindPopup("ü§ù Matched User");

    // ‚úÖ Blue circle showing location accuracy (10 meters)
    L.circle([user1Lat, user1Lng], {
        radius: 10,
        color: "blue",
        fillColor: "#90c3ff",
        fillOpacity: 0.3
    }).addTo(map);

    // ‚úÖ Draw line between both users
    var line = L.polyline(
        [
            [user1Lat, user1Lng],
            [user2Lat, user2Lng]
        ],
        { color: "red", weight: 4 }
    ).addTo(map);

    // ‚úÖ Auto zoom to fit both markers
    map.fitBounds(line.getBounds(), { padding: [50, 50] });

    // ‚úÖ Calculate distance (in meters)
    var distance = map.distance([user1Lat, user1Lng], [user2Lat, user2Lng]);

    // ‚úÖ Show distance in popup
    userMarker.bindPopup(`üìç You<br>Distance to user: ${(distance / 1000).toFixed(2)} km`).openPopup();
    matchedMarker.bindPopup(`ü§ù Matched User<br>Distance: ${(distance / 1000).toFixed(2)} km`);

});
</script>



<script>
async function verifyOTP() {
    const otp = document.getElementById("otp").value;
    const matchId = document.getElementById("matchId").value; // get matchId

    if (!otp || !matchId) {
        alert("OTP or MatchId missing");
        return;
    }

    const res = await fetch("/verify-otp", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ otp, matchId })   // send matchId also
    });

    const result = await res.json();

    const msgBox = document.getElementById("message");

    if (result.success) {
        msgBox.innerHTML = " OTP Verified! Connecting to chat...";
        msgBox.className = "success";

        setTimeout(() => {
            window.location.href = `/chat?matchId=${matchId}`;
        }, 1500);

    } else {
        msgBox.innerHTML = " Invalid OTP. Try again.";
        msgBox.className = "error";
    }
}
</script>


</body>
</html>
